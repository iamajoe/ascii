{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es2015", "dom", "dom.iterable", "esnext"],

    "strict": true,
    "module": "commonjs",
    "moduleResolution": "node",

    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,

    "baseUrl": "./",

    "outDir": "bin",
    "typeRoots": ["node_modules/@types", "typings"],
    "noImplicitAny": false,

    "sourceMap": true,
    "skipLibCheck": true,

    "declarationDir": null,
    "allowJs": true
  },
  "include": ["node_modules/@types/**/*.d.ts", "src/*.ts"],
  "exclude": ["node_modules", "bin", "src/*.spec.ts"]
}
